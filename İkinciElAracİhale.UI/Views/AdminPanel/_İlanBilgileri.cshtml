
@{
    ViewBag.Title = "_İlanBilgileri";
    Layout = "~/Views/Shared/_LayoutPageForAdmins.cshtml";
}

<div class="container mt-4">
    <form>
        <h2>İlan Bilgileri</h2>
        <div class="mb-3">
            <label for="ilan-basligi" class="form-label">İlan Başlığı</label>
            <input type="text" class="form-control" id="ilan-basligi" placeholder="İlan Başlığı">
        </div>
        <div class="mb-3">
            <label for="ilan-aciklamasi" class="form-label">İlan Açıklaması</label>
            <textarea class="form-control" id="ilan-aciklamasi" rows="3" placeholder="İlan Açıklaması"></textarea>
        </div>
        <div class="d-flex justify-content-end">
            <a href="@Url.Action("_AracDetayBilgisi")" class="btn btn-primary">Kaydet</a>
</div>
    </form>
</div>


