
@{
    ViewBag.Title = "Admin Paneli";
    Layout = "~/Views/Shared/_LayoutPageForAdmins.cshtml";
}


<div class="container">
    
    
        <form>
            <h4>Araç Detay Bilgileri</h4>
            <div class="row mb-3">
                <div class="col">
                    <label for="bireysel-kurumsal" class="form-label">Bireysel/Kurumsal</label>
                    @Html.DropDownList("BireyselKurumsalList", null, "Seçiniz...", new { @class = "form-select", id = "bireysel-kurumsal" })
                </div>
                <div class="col">
                    <label for="sirket-adi" class="form-label">Kurumsal Şirket Adı</label>
                    <input type="text" class="form-control" id="kurumsalsirke">
                </div>
                <div class="col">
                    <label for="status" class="form-label">Statü</label>
                    @Html.DropDownList("StatuList", null, "Seçiniz...", new { @class = "form-select", id = "statu" })
                </div>
                <div class="col">
                    <label for="arac-fiyati" class="form-label">Araç Fiyatı</label>
                    <input type="text" class="form-control" id="aracfiyati">
                </div>
            </div>
        </form>
        <br />
        <form>
            <h4>Araç Detay Bilgileri</h4>
            <div class="row mb-3">
                <div class="col">
                    <label for="arac-markasi" class="form-label">Araç Markası</label>
                    @Html.DropDownList("AracMarkaList", null, "Seçiniz...", new { @class = "form-select", id = "aracmarkasi" })
                </div>
                <div class="col">
                    <label for="arac-modeli" class="form-label">Araç Modeli</label>
                    @Html.DropDownList("AracModelList", null, "Seçiniz...", new { @class = "form-select", id = "aracmodeli" })
                </div>
                <div class="col">
                    <label for="govde-tipi" class="form-label">Gövde Tipi</label>
                    @Html.DropDownList("GovdeTipiList", null, "Seçiniz...", new { @class = "form-select", id = "govdetipi" })
                </div>
                <div class="col">
                    <label for="yil" class="form-label">Yıl</label>
                    @Html.DropDownList("YilList", null, "Seçiniz...", new { @class = "form-select", id = "yil" })
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="yakit-tipi" class="form-label">Yakıt Tipi</label>
                    @Html.DropDownList("YakitTipiList", null, "Seçiniz...", new { @class = "form-select", id = "yakittipi" })
                </div>
                <div class="col">
                    <label for="vites-tipi" class="form-label">Vites Tipi</label>
                    @Html.DropDownList("VitesTipiList", null, "Seçiniz...", new { @class = "form-select", id = "vitestipi" })
                </div>
                <div class="col">
                    <label for="versiyon" class="form-label">Versiyon</label>
                    <input type="text" class="form-control" id="versiyon">
                </div>
                <div class="col">
                    <label for="km-bilgisi" class="form-label">KM Bilgisi</label>
                    <input type="text" class="form-control" id="kmbilgisi">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="renk" class="form-label">Renk</label>
                    @Html.DropDownList("RenkList", null, "Seçiniz...", new { @class = "form-select", id = "renk" })
                </div>
                <div class="col">
                    <label for="donanim" class="form-label">Donanım</label>
                    <input type="text" class="form-control" id="donanim">
                </div>
            </div>
        </form>
        <br />
        <form>
            <h4>Foto Ekle</h4>
            <div class="row mb-3">
                <div class="col">
                    <label for="gorseller" class="form-label">Görseller</label>
                    <input type="file" class="form-control" id="gorseller" multiple>
                </div>
            </div>

        </form>
        <div class="mb-3">
            <label for="aciklama" class="form-label">Açıklama</label>
            <textarea class="form-control" id="aciklama" rows="3"></textarea>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-outline-primary me-2">Hemen Al Satış</button>
            <a href="@Url.Action("_KomisyonVeNoterUcretleri")" type="button" class="btn btn-outline-warning me-2">
                Komisyon
            </a>
            <a href="@Url.Action("_KullaniciTanimlama")" type="button" class="btn btn-outline-info me-2">
                Alıcı Bilgileri
            </a>
            <button type="button" class="btn btn-outline-warning me-2">Araç Tarihçe</button>
            <a href="@Url.Action("_TramerBilgileri")" type="button" class="btn btn-outline-success me-2">
                Hasar Tramer Bilgileri
            </a>
            <a href="@Url.Action("_İlanBilgileri")" type="button" class="btn btn-outline-info me-2">
                İlan Bilgileri
            </a>
            <button type="button" class="btn btn-outline-primary">Kaydet</button>
        </div>
    
</div>
