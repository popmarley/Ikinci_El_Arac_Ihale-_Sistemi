
@{
    ViewBag.Title = "_YeniİhaleOlustur";
    Layout = "~/Views/Shared/_LayoutPageForAdmins.cshtml";
}

<div class="container mt-5">
    <h4 class="mb-4">İhale Genel Bilgiler</h4>
    <form>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="ihaleAdi" class="form-label">İhale Adı</label>
                <input type="text" class="form-control" id="ihaleAdi" placeholder="İhale Adı">
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label d-block">Bireysel/Kurumsal</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="bireyselKurumsal" id="bireysel" value="bireysel">
                    <label class="form-check-label" for="bireysel">
                        Bireysel
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="bireyselKurumsal" id="kurumsal" value="kurumsal">
                    <label class="form-check-label" for="kurumsal">
                        Kurumsal
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="sirket" class="form-label">Şirket</label>
                <input type="text" class="form-control" id="sirket" placeholder="Şirket Adı">
            </div>
            <div class="col-md-6 mb-3">
                <label for="ihaleStatusu" class="form-label">İhale Statüsü</label>
                <select class="form-select" id="ihaleStatusu">
                    <option value="" disabled selected>Statü Seçiniz</option>
                    <option value="acik">Açık İhale</option>
                    <option value="kapali">Kapalı İhale</option>
                    <option value="iptal">İptal Edilmiş İhale</option>
                    <option value="tamamlanan">Tamamlanan İhale</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="baslangicTarihi" class="form-label">İhale Başlangıç Tarihi</label>
                <input type="date" class="form-control" id="baslangicTarihi">
            </div>
            <div class="col-md-3 mb-3">
                <label for="baslangicSaati" class="form-label">İhale Başlangıç Saati</label>
                <input type="time" class="form-control" id="baslangicSaati">
            </div>
            <div class="col-md-3 mb-3">
                <label for="bitisTarihi" class="form-label">İhale Bitiş Tarihi</label>
                <input type="date" class="form-control" id="bitisTarihi">
            </div>
            <div class="col-md-3 mb-3">
                <label for="bitisSaati" class="form-label">
                    İhale Bitiş Saati
                </label>
                <input type="time" class="form-control" id="bitisSaati">
            </div>
        </div>
        <br />
        <div class="text-end">
            <button type="submit" class="btn btn-primary mb-5">İhale Oluştur</button>
        </div>
    </form>

</div>
<br />
<table class="table">
    <h4 style="color:dimgrey;">İhale Araç Listesi</h4>
    <thead>
        <tr>
            <th>Araç ID</th>
            <th>Araç Markası</th>
            <th>Modeli</th>
            <th>Bireysel/Kurumsal</th>
            <th>Statüsü</th>
            <th>Kaydeden Kullanıcı</th>
            <th>Kaydetme Zamanı</th>
            <th>Fiyatı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- buraya araç listesi dinamik olarak gelecek -->
    </tbody>
</table>
<br />
<div class="row mt-12">
    <div class="col-md-12 d-flex justify-content-end">
        <a href="@Url.Action("_İhaleFiyat")" class="btn btn-success me-2">Araç Ekle</a>
        <button class="btn btn-primary me-2">Kaydet</button>
    </div>
</div>
